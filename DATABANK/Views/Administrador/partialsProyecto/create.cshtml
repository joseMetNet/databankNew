@model DATABANK.Models.Proyecto
@{
    Layout = "~/Views/Shared/gestionView.cshtml";
}

<section class="section">
    <h5 class="section-header">
        Crear Proyecto
    </h5>
</section>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <small class="text-danger">Los campos con asteriscos son obligatorios.</small>
            </div>
        </div>
        <div class="row">
            <form action="saveProyecto" method="post" id="formsaveemployee" class="container" enctype="multipart/form-data">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <h4 class="h4">Logo</h4>
                            <img src="~/Content/images/proyeccion.png" id="imgCompany" class="img-thumbnail" width="150" height="150" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-md-4 mb-3">
                            <div class="input-group input-group-lg">
                                <input type="file" name="logo" class="form-control-file" id="customFile" onchange="document.getElementById('imgCompany').src = window.URL.createObjectURL(this.files[0])">
                            </div>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Sucursal <span class="text-danger">*</span></label>
                                <select name="idSucursal" class="form-control selectcount" required style="width:100%">
                                    <option></option>
                                    @foreach (var sucursal in ViewBag.ListaSucursal)
                                    {
                                        <option value="@sucursal["idSucursal"]">@sucursal["sucursal"]</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Identificación<span class="text-danger">*</span></label>
                                <input type="text" name="documento" class="form-control form-control-sm" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Nombre Proyecto<span class="text-danger">*</span></label>
                                <input type="text" name="nombre" required class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Descripción<span class="text-danger">*</span></label>
                                <textarea type="text" name="descripcion" required class="form-control form-control-sm"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Cliente<span class="text-danger">*</span></label>
                                <input type="text" name="Cliente" required class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Dirección<span class="text-danger">*</span></label>
                                <input type="text" name="direccion" required class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Teléfono<span class="text-danger">*</span></label>
                                <input type="text" name="telefono" required class="form-control form-control-sm">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 text-center">
                        <br><br>
                        <div class="row">
                            <div class="col-sm-6 text-right">
                                <div class="form-group">
                                    <a href="@Url.Action("Proyectos")" class="btn btn-secondary" style="background-color:#94999c;border-color:#94999c">Cancelar</a>
                                </div>
                            </div>
                            <div class="col-sm-6 text-left">
                                <div class="form-group">
                                    <input type="submit" value="Guardar Proyecto" class="btn btn-danger" style="background-color:#01abe8;border-color:#01abe8">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
    Swal.fire({
        type: '@TempData["type"]',
        title: '@TempData["title"]',
        html: '@TempData["message"]',
        showConfirmButton: false,
        width: 300,
        High: 300,
        timer: 3000
    })
        </script>
    }
    <script type="text/javascript">

        $(".fijo").mask('000000000000000');
        $(".phonee").mask('(000) 000-0000');
        $(".selectcount").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount1").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount2").select2({
            placeholder: "Seleccionar",
            allowClear: true
        });
    </script>
}


