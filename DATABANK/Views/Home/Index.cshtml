@model DATABANK.Models.Login
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="text-center">
                            <img src="~/Content/images/abacus.png" alt="" width="70%" />
                        </div>
                        <br>
                        <div class="card card-primary">
                            <div class="card-header"><h4>Inicio De Sesión</h4></div>
                            <div class="card-body">
                                <form method="POST" action="#" class="needs-validation" novalidate="">
                                    <div class="form-group">
                                        <label for="email">Correo/Usuario</label>
                                        @Html.TextBoxFor(model => model.usuario, new { @class = "form-control", @required = "", @Style = "width:80%; margin:auto" })
                                        <div class="invalid-feedback">
                                            Digite Su Correo/Usuario
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="password" class="d-block">
                                            Contraseña
                                            <div class="float-right">
                                                <a href="@Url.Action("forgotYourPassword")">¿Olvidó su contraseña?</a>
                                            </div>
                                        </label>
                                        @Html.PasswordFor(model => model.contrasena, new { @class = "form-control", @required = "", @Style = "width:80%; margin:auto" })
                                        <div class="invalid-feedback">
                                            Diligencie Su Contraseña
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-12 text-center">
                                            <button type="submit" class="btn btn-danger" style="background-color:#01abe8;border-color:#01abe8" tabindex="4">
                                                Ingreso
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="simple-footer">
                            © @DateTime.Now.ToString("yyyy") MetNet - Todos Los Derechos Reservados.
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
} 
@section scripts{
    @if (Session["message"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                type: '@Session["type"]',
                html: "@Session["message"]",
                title: "@Session["title"]",
                ShowConfirmButton: true,
                confirmButtonColor: '#01abe8',
                cancelButtonColor: '#94999c',
            });
        </script>
        Session.Remove("type");
        Session.Remove("message");
        Session.Remove("title");
    }
    <script>
    </script>
}
