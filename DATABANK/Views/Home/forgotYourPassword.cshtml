@model DATABANK.Models.forgotYourPassword
@{
    ViewBag.Title = "forgotYourPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("recoverPassword", "Home", FormMethod.Post))
{
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="login-brand">
                        <img src="~/Content/images/abacus.png" alt="" width="70%" />
                    </div>

                    <div class="card card-primary">
                        <div class="card-header"><h4>Restablecer Contraseña</h4></div>

                        <div class="card-body">
                            <p class="text-muted">Le enviaremos un enlace para restablecer su contraseña</p>
                            <form method="POST">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control", @required = "", @Style = "width:100%; margin:auto" })
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12 text-center">
                                        <button type="submit" class="btn btn-danger text-center" style="background-color:#01abe8;border-color:#01abe8" tabindex="4">
                                            Restablecer Contraseña
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="simple-footer">
                        © @DateTime.Now.ToString("yyyy") MetNet - Todos Los Derechos Reservados.
                    </div>
                </div>
            </div>
        </div>
    </section>
