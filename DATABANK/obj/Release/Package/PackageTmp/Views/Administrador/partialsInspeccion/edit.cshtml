@model DATABANK.Models.usuarios
@{
    ViewBag.Title = "Creacion Empleado";
    Layout = "~/Views/Shared/gestionView.cshtml";
}

<section class="section">
    <h5 class="section-header">
        Editar Inventario
    </h5>
</section>
<div class="card">
    <div class="card-header">
        <div class="col-sm-12 row">
            <small class="text-danger">Los campos con asteriscos son obligatorios.</small>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <form action="@Url.Action("saveInventarioUpdate")" method="post" id="formsaveemployee" class="col-sm-12 row" enctype="multipart/form-data">
                <input type="hidden" name="idInventario" value="@ViewBag.Inventario["idInventario"]" />
                <br>
                <br>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Proyecto <span class="text-danger">*</span></label>
                                <select name="idProyecto" class="form-control selectcount" required style="width:100%">
                                    <option></option>
                                    @foreach (var proyecto in ViewBag.ListaProyecto)
                                    {
                                        if (Convert.ToInt32(ViewBag.Inventario["idProyecto"]) == proyecto["idProyecto"])
                                        {
                                            <option selected value="@proyecto["idProyecto"]">@proyecto["NombreProyecto"]</option>
                                        }
                                        else
                                        {
                                            <option value="@proyecto["idProyecto"]">@proyecto["NombreProyecto"]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Producto <span class="text-danger">*</span></label>
                                <select name="idProducto" class="form-control selectcount" required style="width:100%">
                                    <option></option>
                                    @foreach (var producto in ViewBag.ListaProducto)
                                    {
                                        if (Convert.ToInt32(ViewBag.Inventario["idProducto"]) == producto["idProducto"])
                                        {
                                            <option selected value="@producto["idProducto"]">@producto["NombreProducto"]</option>
                                        }
                                        else
                                        {
                                            <option value="@producto["idProducto"]">@producto["NombreProducto"]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Bodega <span class="text-danger">*</span></label>
                                <select name="idBodega" class="form-control selectcount" required style="width:100%">
                                    <option></option>
                                    @foreach (var bodega in ViewBag.ListaBodega)
                                    {
                                        if (Convert.ToInt32(ViewBag.Inventario["idBodega"]) == bodega["idBodega"])
                                        {
                                            <option selected value="@bodega["idBodega"]">@bodega["NombreBodega"]</option>
                                        }
                                        else
                                        {
                                            <option value="@bodega["idBodega"]">@bodega["NombreBodega"]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Codigo<span class="text-danger">*</span></label>
                                <input type="text" name="codigo" class="form-control form-control-sm" required value="@ViewBag.Inventario["codigo"]">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Cantidad<span class="text-danger">*</span></label>
                                <input type="text" name="cantidad" class="form-control form-control-sm" required value="@ViewBag.Inventario["cantidad"]">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Ubicación<span class="text-danger">*</span></label>
                                <input type="text" name="ubicacion" class="form-control form-control-sm" required value="@ViewBag.Inventario["ubicacion"]">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Descripción<span class="text-danger">*</span></label>
                                <textarea name="description" class="form-control form-control-sm" rows="3">@ViewBag.Inventario["descripcion"]</textarea>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Estado <span class="text-danger">*</span></label>
                                <select name="idEstado" class="form-control selectcount" required style="width:100%">
                                    <option></option>
                                    @foreach (var estado in ViewBag.ListaEstado)
                                    {
                                        if (Convert.ToInt32(ViewBag.Inventario["idEstado"]) == @estado["idEstado"])
                                        {
                                            <option selected value="@estado["idEstado"]">@estado["estado"]</option>
                                        }
                                        else
                                        {
                                            <option value="@estado["idEstado"]">@estado["estado"]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 text-center">
                            <br><br>
                            <div class="row">
                                <div class="col-sm-6 text-right">
                                    <div class="form-group">
                                        <a href="@Url.Action("Inventario")" class="btn btn-secondary">&nbsp;&nbsp;&nbsp;&nbsp;Cancelar&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                    </div>
                                </div>
                                <div class="col-sm-6 text-left">
                                    <div class="form-group">
                                        <input type="submit" value="Guardar Inventario" class="btn btn-danger">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                type: '@TempData["type"]',
                title: '@TempData["title"]',
                html: '@TempData["message"]',
                showConfirmButton: false,
                width: 300,
                High: 300,
                timer: 3000
            })
        </script>
    }
    <script type="text/javascript">
        $(".fijo").mask('000000000000000');
        $("#phonee").mask('(000) 000-0000');
        $(".selectcount").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount1").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount2").select2({
            placeholder: "Seleccionar",
            allowClear: true
        });


    </script>
}


