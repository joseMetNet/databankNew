@model DATABANK.Models.Inspeccion
@{
    ViewBag.Title = "Creacion Empleado";
    Layout = "~/Views/Shared/gestionView.cshtml";
}

<section class="section">
    <h5 class="section-header">
        Detalle Inspección
    </h5>
</section>
<div class="card">
    <div class="card-body">
        <div class="row">
            <br>
            <br>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Bodega <span class="text-danger">*</span></label>
                            <select name="idBodega" class="form-control selectcount este" style="width:100%" disabled>
                                <option></option>
                                @foreach (var bodega in ViewBag.ListaBodega)
                                {
                                    if (Convert.ToInt32(ViewBag.Inspeccion["idBodega"]) == bodega["idBodega"])
                                    {
                                        <option selected value="@bodega["idBodega"]">@bodega["NombreBodega"]</option>
                                    }
                                    else
                                    {
                                        <option value="@bodega["idBodega"]">@bodega["NombreBodega"]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Codigo<span class="text-danger">*</span></label>
                            <input type="text" name="codigo" class="form-control form-control-sm" value="@ViewBag.Inspeccion["codigo"]" readonly>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Nombre Material<span class="text-danger">*</span></label>
                            <input type="text" name="nombreProducto" class="form-control form-control-sm" value="@ViewBag.Inspeccion["Observacion"]" readonly>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Cantidad<span class="text-danger">*</span></label>
                            <input type="text" name="Cantidad" class="form-control form-control-sm" value="@ViewBag.Inspeccion["qty"]" readonly>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Unidad Medida <span class="text-danger">*</span></label>
                            <select name="idUnidadMedida" class="form-control selectcount este" disabled style="width:100%">
                                <option></option>
                                @foreach (var unidad in ViewBag.ListaUnidadMedida)
                                {
                                    if (Convert.ToInt32(ViewBag.Inspeccion["idUnidadMedida"]) == unidad["idUnidadMedida"])
                                    {
                                        <option selected value="@unidad["idUnidadMedida"]">@unidad["UnidadMedida"]</option>
                                    }
                                    else
                                    {
                                        <option value="@unidad["idUnidadMedida"]">@unidad["UnidadMedida"]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Ubicación<span class="text-danger">*</span></label>
                            <input type="text" name="Ubicacion" class="form-control form-control-sm" value="@ViewBag.Inspeccion["Ubicacion"]" readonly>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Descripción<span class="text-danger">*</span></label>
                            <textarea name="descripcion" class="form-control form-control-sm" readonly>@ViewBag.Inspeccion["descripcion"]</textarea>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Observacion<span class="text-danger">*</span></label>
                            <textarea name="Observacion" class="form-control form-control-sm" readonly>@ViewBag.Inspeccion["Observacion"]</textarea>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Ubicación Auxiliar</label>
                            <input type="text" name="ubicacionAuxiliar" class="form-control form-control-sm" readonly value="@ViewBag.Inspeccion["UbicacionAuxiliar"]">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Estado<span class="text-danger">*</span></label>
                            <select name="idEstado" class="form-control selectcount" disabled style="width:100%">
                                <option></option>
                                @foreach (var estado in ViewBag.ListaEstado)
                                {
                                    if (Convert.ToInt32(ViewBag.Inspeccion["idEstado"]) == estado["idEstado"])
                                    {
                                        <option selected value="@estado["idEstado"]">@estado["Estado"]</option>
                                    }
                                    else
                                    {
                                        <option value="@estado["idEstado"]">@estado["Estado"]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Categoria<span class="text-danger">*</span></label>
                            <select name="idCategoria" class="form-control selectcount" disabled style="width:100%">
                                <option></option>
                                @foreach (var categoria in ViewBag.ListaCategoria)
                                {
                                    if (Convert.ToInt32(ViewBag.Inspeccion["idCategoria"]) == categoria["idCategoria"])
                                    {
                                        <option selected value="@categoria["idCategoria"]">@categoria["Categoria"]</option>
                                    }
                                    else
                                    {
                                        <option value="@categoria["idCategoria"]">@categoria["Categoria"]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Conteo<span class="text-danger">*</span></label>
                            <input type="text" name="conteo" class="form-control form-control-sm" readonly value="@ViewBag.Inspeccion["conteo"]">
                        </div>
                    </div>
                </div>
                <div class="row" id="contenerimg">
                    @if (ViewBag.image.Count > 0)
                    {
                        foreach (var imagen in ViewBag.image)
                        {
                            <div class="col-md-2">
                                <div class="wow fadeIn">
                                    <h4><strong>Imagen</strong></h4>
                                    <img src="@imagen["srcImage"]" alt="" class="img-responsive img-rounded" width="200" height="200">
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="col-sm-12 text-center">
                    <br><br>
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <div class="form-group">
                                <a href="@Url.Action("ListaInspecciones")" class="btn btn-danger" style="background-color:#94999c;border-color:#94999c">Volver</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
        Swal.fire({
            type: '@TempData["type"]',
            title: '@TempData["title"]',
            html: '@TempData["message"]',
            showConfirmButton: false,
            width: 300,
            High: 300,
            timer: 3000
        })
        </script>
    }
    <script type="text/javascript">
        $(".fijo").mask('000000000000000');
        $("#phonee").mask('(000) 000-0000');
        $(".selectcount").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount1").select2({
            placeholder: "Seleccionar",
            allowClear: true
        })
        $(".selectcount2").select2({
            placeholder: "Seleccionar",
            allowClear: true
        });
        $("#estado").change(function () {
            if ($(this).val() == 4)
                $(".categoria").removeClass("d-none")
            else
                $(".categoria").addClass("d-none")
        });
        $('#addimagebutton').click(function () {
            var ranos = "nada" + Math.floor(Math.random() * 1000)
            var htmls = "<div class=\"col-md-2\">";
            htmls += "<div class=\"wow fadeIn\">";
            htmls += "<h5><strong>Imagen</strong>&nbsp;&nbsp;&nbsp;<i class=\"fa fa-minus-circle menusbut curpointer\"></i></h5>";
            htmls += '<img src="#" alt="" id="' + ranos + '" class="img-responsive img-rounded" width="100"  height="100">';
            htmls += "</div>"
            htmls += "<div class=\"row\">";
            htmls += "<div class=\"col-md-12 mb-3\">";
            htmls += "<label></label>";
            htmls += "<div class=\"input-group input-group-lg\">";
            htmls += "<div class=\"input-group-prepend\">";
            htmls += "<label class=\"custom-file-label\" for=\"customFile\">Buscar</label>";
            htmls += "</div>";
            htmls += "<input type=\"file\" name=\"ImageFile[]\" class=\"custom-file-input\" id=\"customFile\"";
            htmls += "onchange=\"document.getElementById('" + ranos + "').src = window.URL.createObjectURL(this.files[0])\"> "
            htmls += "</div>";
            htmls += "</div>";
            htmls += "</div>";
            htmls += "</div>";
            $("#contenerimg").append(htmls);
        });
    </script>
}


